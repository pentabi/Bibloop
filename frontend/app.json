{
  "expo": {
    "name": "Bibloop",
    "slug": "frontend",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFFFFFFF",
      "dark": {
        "image": "./assets/images/splash-dark.png",
        "backgroundColor": "#000000"
      }
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "appleId": "tabitosatoh@gmail.com",
      "ascAppId": "6751510418",
      "appleTeamId": "5Y25M32JP9",

      "supportsTablet": true,
      "bundleIdentifier": "com.tabitosatoh.Bibloop",
      "associatedDomains": ["applinks:myapp"],
      "infoPlist": {
        "NSCameraUsageDescription": "プロフィール写真の撮影や写真の共有のために、カメラへのアクセスが必要です。",
        "NSPhotoLibraryUsageDescription": "写真の選択や共有のために、フォトライブラリへのアクセスが必要です。",
        "NSPhotoLibraryAddUsageDescription": "写真をフォトライブラリに保存するために、アクセスが必要です。"
      }
    },
    "android": {
      "edgeToEdgeEnabled": true,
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "myapp"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ],
      "package": "com.anonymous.frontend"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#007AFF",
          "image": "./assets/images/splash.png",
          "dark": {
            "image": "./assets/images/splash-dark.png",
            "backgroundColor": "#000000"
          },
          "imageWidth": 400
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "カメラロールを使う許可が必要です",
          "cameraPermission": "カメラを使う許可が必要です"
        }
      ],
      "expo-sqlite"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "5763bc7a-7d19-4699-8dca-a5a8ed97f09c"
      }
    }
  }
}
